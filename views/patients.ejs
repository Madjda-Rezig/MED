<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<!-- My CSS -->
	<link rel="stylesheet" href="css/style.css">
	<link rel="stylesheet" href="css/Form.css">

	<title>Docteur</title>
</head>
<body>


	<!-- SIDEBAR -->
	<section id="sidebar">
		<a href="#" class="brand">
			<i class='bx bx-plus-medical'></i>
			<span class="text">DOCTEUR</span>
		</a>
		<ul class="side-menu top">
			<li class="active">
				<a href="/">
					<i class='bx bxs-dashboard' ></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li>
				<a href="/Patients">
					<i class='bx bxs-group' ></i>
					<span class="text">Mes Patients</span>
				</a>
			</li>
			<li>
				<a href="#">
					<i class='bx bxs-doughnut-chart' ></i>
					<span class="text">Analytics</span>
				</a>
			</li>
			<li>
				<a href="/RDV">
					<i class='bx bxs-message-dots' ></i>
					<span class="text">Prise De RDV</span>
				</a>
			</li>
			
		</ul>
		<ul class="side-menu">
			<li>
				<a href="#">
					<i class='bx bxs-cog' ></i>
					<span class="text">Parametres</span>
				</a>
			</li>
			<li>
				<a href="#" class="logout">
					<i class='bx bxs-log-out-circle' ></i>
					<span class="text">Déconnexion</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->



	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class='bx bx-menu' ></i>
			<a href="#" class="nav-link">Categories</a>
			<form action="#">
				<div class="form-input">
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn"><i class='bx bx-search' ></i></button>
				</div>
			</form>
			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
			<a href="#" class="notification">
				<p>Docteur Salhi</p>
				<p>Généraliste</p>
			</a>
			<a href="#" class="profile">
				<img src="img/docteur.jpg">
			</a>
		</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>Mes Patients</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#">Dashboard</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">Home</a>
						</li>
					</ul>
				</div>
				<a href="#" class="btn-download">
					<i class='bx bxs-cloud-download' ></i>
					<span class="text">Download PDF</span>
				</a>
			</div>

			<ul class="box-info">
				<li>
					<a href="/FormPatient"><i class='bx bxs-calendar-check' ></i>
					<span class="text">
						<h3>AJOUTER</h3>
						<p>Nouveau Patient</p>
					</span></a>
				</li>
				<li>
					<a href="#"><i class='bx bxs-group' ></i>
					<span class="text">
						<h3>Analyses</h3>
						<p>Résultats des Analyses </p>
					</span>

					</a>
					
				</li>
				
			</ul>


			<div class="table-data">
				<div class="order">
					<div class="head">
						<h3>Liste Des Patients</h3>
						<i class='bx bx-search' ></i>
						<i class='bx bx-filter' ></i>
					</div>
					<table>
						<thead>
							<tr>
								<th>Code Patients</th>
								<th>Nom</th>
								<th>Prénom</th>
                                <th>Date De Naissance</th>
                                <th>Genre</th>
								<th>Modifier</th>
								<th>Supprimer</th>

							</tr>
						</thead>
						<tbody>
							<% patient.forEach(element=>{%>
							<tr>
								<td><%= element.CodePatient %></td>
								<td><%= element.Nom %></td>
								<td><%= element.Prenom %></td>
								<td><%= element.DateNaissance.toString().slice(4,15) %></td>
								<td><%= element.Genre %></td>

								<td><input type="button" value="modifier" onclick=""></td>
								<td><input type="button" value="Supprimer" onclick="onDelete('<%= element.CodePatient %>')"></td>

							</tr>
							<%})%>
						</tbody>
					</table>
				</div>
				
			</div>
		</main>
		<!-- MAIN -->
	</section>
	<!-- CONTENT -->
	

	<script src="js/script.js"></script>
</body>
</html>